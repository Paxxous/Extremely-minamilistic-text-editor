{
  "name": "simpletext",
  "version": "1.0.0",
  "description": "A very simplistic text editor",
  "main": "./src/index.js",
  "build": {

    "appId": "simpletext",
    "win": {
  

      "target": [
        "nsis"
      ],
      "icon": "src/icon.ico"
    },
    "nsis": {
      "installerIcon": "src/icon.ico",
      "uninstallerIcon": "src/icon.ico",
      "uninstallDisplayName": "simpletext",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true

    }
  },
  "scripts": {
    "test": "electron src/.",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build-installer": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Paxxous/First-Electron-App.git"
  },
  "keywords": [
    "text-editor",
    "electron",
    "simplistic"
  ],
  "author": "paxxous",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Paxxous/First-Electron-App/issues"
  },
  "homepage": "https://github.com/Paxxous/First-Electron-App#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "electron-builder": "^22.14.13",
    "electron": "^17.0.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/icon.ico",
        "setupIcon": "./src/icon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "simpletext",
            "icon": "./src/icon.ico",
            "setupIcon": "./src/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
